<section id="{{ ishi_randomnumer }}" class="galleryblock container clearfix">
    <div class="subtitle">{{ subtitle }}</div>
    <h3 class="home-title">{{ heading }}</h3>
    <div class="owl-carousel">
    {% for ishi_sliderimage in ishi_sliderimages %}
    <div class="item gallery-image">
        <a href="{{ ishi_sliderimage.image }}" class="image_popup">
            <img src="{{ ishi_sliderimage.image }}" alt="{{ ishi_sliderimage.title }}" class="img-responsive" />
            <div class="imageoverlay">
                <div class="icon">
                    <div class="icon-square">
                        <i class="fa fa-mail-forward"></i>
                    </div>
                </div>
            </div>
        </a>
    </div>
    {% endfor %}
    </div>
    <script type="text/javascript">
        $('#{{ ishi_randomnumer }} .owl-carousel').owlCarousel({
            loop:{{ loop }},
            nav:false,
            dots:false,
            margin:30,
            autoplay:{{ autoplay }},
            animateOut: 'fadeOut',
            navigateByImgClick: true,
            rtl: $('html').attr('dir') == 'rtl'? true : false,
            navText: ["<i class='fa fa-angle-left'></i>","<i class='fa fa-angle-right'></i>"],
            responsive:{
                0:{
                    items:2,
                    margin:10 
                },
                375:{
                    items:2,
                    margin:10 
                },
                480:{
                    items:2,
                    margin:10 
                },
                544:{
                    items:3
                },
                768:{
                    items:3
                },
                992:{
                    items:3
                },
                1200:{
                    items:4
                }
            }
        });
        $('.gallery-image').magnificPopup({
          type:'image',
          delegate: '.image_popup',
          gallery: {
            enabled: true
          }
        });
    </script>
</section>