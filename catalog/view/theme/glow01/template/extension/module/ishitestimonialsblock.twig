<section id="{{ random_id }}" class="ishitestimonials col-md-12 col-sm-12 col-lg-6 col-md-12">
		<div  class="ishitestimonials-container">
			<div class="container">
					{% if title %}
						<h3 class="home-title">{{ title }}</h3>
					{% endif %}
					<div class="owl-carousel">				
						{% for ishitestimonial in ishitestimonials %}
							<div class="item">
								<div class="user-details">
									<div class="testimonial-img">
										<img src="{{ ishitestimonial.image }}" alt="{{ ishitestimonial.username }}">
									</div>
									<div class="user-detail">
										<span class="user-name">
											{{ ishitestimonial.username }}
										</span>
										<span class="user-designation">
											{{ ishitestimonial.designation }}
										</span>
									</div>
								</div>
								<div class="user-description">
									{{ ishitestimonial.description }}
								</div>
							</div>
						{% endfor %}				
					</div>
			</div>
		</div>
	    <script type="text/javascript">  
	        $('#{{ random_id }} .owl-carousel').owlCarousel({
	            loop:false,
	            nav: false,
	            rewind:true,
	            dots:true,
	            margin:30,
				autoplay:{{ autoplay }},
	            rtl: $('html').attr('dir') == 'rtl'? true : false,
	            navText: ["<i class='fa fa-angle-left'></i>","<i class='fa fa-angle-right'></i>"],
	            responsive:{
	            	0:{
		                items:1
		            },
	            	544:{
		                items:1
		            },
	            	768:{
		                items:1
		            },
	            	992:{
		                items:1
		            },
	            	1200:{
		                items:1
		            }
	            }
	        });
	    </script>
		<style>
			.ishitestimonials-container{
				background-color: {{ bgcolor }}
			}
		</style>
</section>