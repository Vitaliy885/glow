<section id="{{ ishi_randomnumer }}" class="ishibannerblock {{ bannerclass }}">
	{% for banner in banners %}
		<div class="bannerblock {{ column_class }}">
			<div class="image-container">
				<a href="{{ banner.link }}" class="{{ style }} {{ scale }}">
					<img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive">  
				</a>
			</div>
			{% if banner.showtext == 1 %}	
				<div class="banner-data">
					{% if banner.title %}
						<div class="banner-title">{{ banner.title }}</div>
					{% endif %}
					{% if banner.subtitle %}
						<div class="banner-subtitle">{{ banner.subtitle }}</div>
					{% endif %}
					{% if banner.button_name %}
						<a href="{{ banner.link }}" class="banner-btn btn-primary">{{ banner.button_name }}</a>
					{% endif %}
				</div>
			{% endif %}
		</div>
	{% endfor %}
</section>